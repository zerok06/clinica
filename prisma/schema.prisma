generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model usuario {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  nombres        String
  apellidos      String
  email          String
  dni            String
  telefono       String
  createAt       DateTime       @default(now())
  updateAt       DateTime       @updatedAt
  credenciales   credenciales   @relation(fields: [credencialesId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  credencialesId String         @unique @db.ObjectId
  administrador  administrador?
  secretaria     secretaria?
  doctor         doctor?
}

model credenciales {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  username String   @unique
  password String
  usuario  usuario?
}

model administrador {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  usuario   usuario @relation(fields: [usuarioId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  usuarioId String  @unique @db.ObjectId
}

model secretaria {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  usuario   usuario @relation(fields: [usuarioId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  usuarioId String  @unique @db.ObjectId
}

model doctor {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  usuario   usuario @relation(fields: [usuarioId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  usuarioId String  @unique @db.ObjectId
}

model paciente {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  nombres       String
  apellidos     String
  direccion     String
  nacimiento    DateTime
  edad          Int
  dni           String
  celular       String
  convenio      String
  createAt      DateTime        @default(now())
  file          file[]
  procedimiento procedimiento[]
  cita          cita[]
}

model tratamiento {
  id                            String                          @id @default(auto()) @map("_id") @db.ObjectId
  nombre                        String
  descripcion                   String
  monto                         Float
  categoriaTratamiento          categoriaTratamiento?           @relation(fields: [categoriaTratamientoId], references: [id], onUpdate: Cascade, onDelete: SetNull)
  categoriaTratamientoId        String?                         @db.ObjectId
  detalleDiagnosticoTratamiento detalleDiagnosticoTratamiento[]
}

model categoriaTratamiento {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String
  descripcion String
  tratamiento tratamiento[]
}

model diagnostico {
  id                            String                          @id @default(auto()) @map("_id") @db.ObjectId
  nombre                        String
  descripcion                   String
  detalleDiagnosticoTratamiento detalleDiagnosticoTratamiento[]
}

model detalleDiagnosticoTratamiento {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  diagnostico   diagnostico @relation(fields: [diagnosticoId], references: [id])
  diagnosticoId String      @db.ObjectId
  tratamiento   tratamiento @relation(fields: [tratamientoId], references: [id])
  tratamientoId String      @db.ObjectId
}

model cita {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  estado          EstadoCita     @default(Pendiente)
  start           DateTime
  end             DateTime
  createAt        DateTime       @default(now())
  updateAt        DateTime       @updatedAt
  procedimiento   procedimiento? @relation(fields: [procedimientoId], references: [id])
  procedimientoId String?        @db.ObjectId
  paciente        paciente?      @relation(fields: [pacienteId], references: [id])
  pacienteId      String?        @db.ObjectId
}

model file {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  type       String
  path       String
  size       String
  category   CategoriaFile @default(Otros)
  createAt   DateTime      @default(now())
  paciente   paciente      @relation(fields: [pacienteId], references: [id])
  pacienteId String        @db.ObjectId
}

model procedimiento {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  start       DateTime
  end         DateTime
  monto_total Float
  recaudado   Float               @default(0.00)
  estado      StatusProcedimiento @default(pendiente)
  title       String
  desc        String
  paciente    paciente            @relation(fields: [pacienteId], references: [id])
  pacienteId  String              @db.ObjectId
  pagos       pagos[]
  cita        cita[]
}

model pagos {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  fecha           DateTime      @default(now())
  desc            String
  monto           Float
  procedimiento   procedimiento @relation(fields: [procedimientoId], references: [id])
  procedimientoId String        @db.ObjectId
}

enum StatusProcedimiento {
  completada
  cancelada
  pendiente
}

enum TypeFile {
  pdf
  image
  otros
}

enum CategoriaFile {
  Radiografia
  Consentimiento
  Otros
}

model insumo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String
  cantidad    Int
  description String
}

enum EstadoCita {
  Pendiente
  Completado
  Cancelado
}
