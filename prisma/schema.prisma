generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model usuario {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  nombres        String
  apellidos      String
  email          String
  dni            String
  telefono       String
  role           Role         @default(administrador)
  createAt       DateTime     @default(now())
  updateAt       DateTime     @updatedAt
  credenciales   credenciales @relation(fields: [credencialesId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  credencialesId String       @unique @db.ObjectId
}

enum Role {
  administrador
  secretaria
  doctor
}

model credenciales {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  username String   @unique
  password String
  usuario  usuario?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model paciente {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  nombres       String
  apellidos     String
  direccion     String
  nacimiento    DateTime
  edad          Int
  dni           String
  celular       String
  convenio      String
  file          file[]
  procedimiento procedimiento[]
  cita          cita[]
  createAt      DateTime        @default(now())
  updateAt      DateTime        @updatedAt
  odontograma   odontograma[]
}

model tratamiento {
  id                            String                          @id @default(auto()) @map("_id") @db.ObjectId
  nombre                        String
  descripcion                   String
  monto                         Float
  categoriaTratamiento          categoriaTratamiento?           @relation(fields: [categoriaTratamientoId], references: [id], onUpdate: Cascade, onDelete: SetNull)
  categoriaTratamientoId        String?                         @db.ObjectId
  detalleDiagnosticoTratamiento detalleDiagnosticoTratamiento[]
  createAt                      DateTime                        @default(now())
  updateAt                      DateTime                        @updatedAt
}

model categoriaTratamiento {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String
  descripcion String
  tratamiento tratamiento[]
  createAt    DateTime      @default(now())
  updateAt    DateTime      @updatedAt
}

model diagnostico {
  id                            String                          @id @default(auto()) @map("_id") @db.ObjectId
  nombre                        String
  descripcion                   String
  detalleDiagnosticoTratamiento detalleDiagnosticoTratamiento[]
  createAt                      DateTime                        @default(now())
  updateAt                      DateTime                        @updatedAt
}

model detalleDiagnosticoTratamiento {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  diagnostico   diagnostico @relation(fields: [diagnosticoId], references: [id])
  diagnosticoId String      @db.ObjectId
  tratamiento   tratamiento @relation(fields: [tratamientoId], references: [id])
  tratamientoId String      @db.ObjectId
  createAt      DateTime    @default(now())
  updateAt      DateTime    @updatedAt
}

model cita {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  estado          EstadoCita     @default(Pendiente)
  start           DateTime
  end             DateTime
  createAt        DateTime       @default(now())
  updateAt        DateTime       @updatedAt
  procedimiento   procedimiento? @relation(fields: [procedimientoId], references: [id])
  procedimientoId String?        @db.ObjectId
  paciente        paciente?      @relation(fields: [pacienteId], references: [id])
  pacienteId      String?        @db.ObjectId
}

model file {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  type       String
  path       String
  size       String
  category   CategoriaFile @default(Otros)
  createAt   DateTime      @default(now())
  paciente   paciente      @relation(fields: [pacienteId], references: [id])
  pacienteId String        @db.ObjectId
  updateAt   DateTime      @updatedAt
}

model procedimiento {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  start       DateTime
  end         DateTime
  monto_total Float
  recaudado   Float               @default(0.00)
  estado      StatusProcedimiento @default(pendiente)
  title       String
  desc        String
  paciente    paciente            @relation(fields: [pacienteId], references: [id])
  pacienteId  String              @db.ObjectId
  pagos       pagos[]
  cita        cita[]
  createAt    DateTime            @default(now())
  updateAt    DateTime            @updatedAt
}

model pagos {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  fecha           DateTime      @default(now())
  desc            String
  monto           Float
  procedimiento   procedimiento @relation(fields: [procedimientoId], references: [id])
  procedimientoId String        @db.ObjectId
  createAt        DateTime      @default(now())
  updateAt        DateTime      @updatedAt
}

model insumo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String
  cantidad    Int
  description String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}

model odontograma {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  paciente   paciente? @relation(fields: [pacienteId], references: [id], onDelete: SetNull, onUpdate: SetNull)
  createAt   DateTime  @default(now())
  updateAt   DateTime  @updatedAt
  pacienteId String?   @db.ObjectId
  diente     diente[]
}

model diente {
  id                    String                  @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  code                  Int
  tipo                  TipoDienteEnum
  odontograma           odontograma             @relation(fields: [odontogramaId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createAt              DateTime                @default(now())
  updateAt              DateTime                @updatedAt
  odontogramaId         String                  @db.ObjectId
  diagnosticoMonoDiente diagnosticoMonoDiente[]
}

model diagnosticoMonoDiente {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  base64      String
  desc        String
  name        String
  nomeclatura String   @default("N/A")
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  diente      diente   @relation(fields: [dienteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  dienteId    String   @db.ObjectId
}

enum TipoDienteEnum {
  Permanente
  Temporal
}

enum StatusProcedimiento {
  completada
  cancelada
  pendiente
}

enum TypeFile {
  pdf
  image
  otros
}

enum CategoriaFile {
  Odontograma
  Radiografia
  Consentimiento
  Otros
}

enum EstadoCita {
  Pendiente
  Completado
  Cancelado
}
